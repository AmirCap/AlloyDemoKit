@using AlloyDemoKit.Models.Pages.Blog
@model PageViewModel<BlogGlobalStartPage>

@{ Layout = "~/Views/Shared/Layouts/_TwoPlusOne.cshtml"; }

<h1 @Html.EditAttributes(x => x.CurrentPage.Name)>@Model.CurrentPage.Name</h1>
<p class="introduction" @Html.EditAttributes(x => x.CurrentPage.MetaDescription)>@Model.CurrentPage.MetaDescription</p>
<div class="row">

    <div class="span8 clearfix">
        @Html.PropertyFor(x => x.CurrentPage.BlogList)
    </div>
</div>
@Html.PropertyFor(x => x.CurrentPage.MainContentArea, new { CssClass = "row equal-height", Tag = AlloyDemoKit.Global.ContentAreaTags.TwoThirdsWidth })

@section RelatedContent
{
    @Html.Partial("_Authors", Model.CurrentPage.Authors ?? new List<AuthorList>())
    @Html.PropertyFor(x => x.CurrentPage.TagCloud)
    @Html.PropertyFor(x => x.CurrentPage.Archive)
}
